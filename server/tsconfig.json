{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@engine/*": ["../engine/*"],
      "@state/*": ["../state/*"],
      "@shared/*": ["../shared/*"],
      "@game/*": ["../game/*"]
    }
  },
  "include": ["src", "../engine", "../ecs", "../state", "../shared", "../game"]
}
